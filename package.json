{
  "name": "lens-qa",
  "version": "1.0.0",
  "description": "qa automation proof of concept for lens project",
  "scripts": {
    "postinstall": "webdriver-manager update --gecko=false",
    "tscw": "tsc -w",
    "pretest": "rimraf ./build && tsc",
    "test": "npm-run-all protractor allure --continue-on-error",
    "debug": "rimraf ./build && tsc && protractor ./build/protractor.conf.js --highlightDelay 5000 --webDriverLogDir artifacts/logs",
    "protractor": "protractor ./build/protractor.conf.js",
    "allure": "allure generate artifacts/test-reports/allure-src -o artifacts/test-reports/allure-results --clean",
    "results": "allure open artifacts/test-reports/allure-results",
    "clean": "rimraf ./build && rimraf ./artifacts/test-reports",
    "check": "eslint --format codeframe **/*.ts"
  },
  "author": "---------------------------",
  "dependencies": {
    "@types/node": "^13.7.1",
    "allure-commandline": "2.7.0",
    "axios": "^0.19.2",
    "deasync": "0.1.13",
    "jasmine-allure-reporter": "1.0.2",
    "jasmine-spec-reporter": "^4.2.1",
    "npm-run-all": "4.1.3",
    "protractor": "5.4.1"
  },
  "devDependencies": {
    "@types/jasmine": "2.8.1",
    "@typescript-eslint/eslint-plugin": "^2.21.0",
    "@typescript-eslint/parser": "^2.21.0",
    "eslint": "^6.8.0",
    "rimraf": "^3.0.2",
    "typescript": "^3.2.1"
  }
}
